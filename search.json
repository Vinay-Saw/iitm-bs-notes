---
layout: null
---
[
  {% assign all_notes = site.mathematics | concat: site.code | concat: site.general %}
  {% for note in all_notes %}
    {
      "title": "{{ note.title | escape }}",
      "category": "{{ note.category | escape }}",
      "tags": "{{ note.tags | join: ', ' }}",
      "url": "{{ note.url | relative_url }}",
      "date": "{{ note.date | date_to_xmlschema }}",
      "excerpt": "{{ note.content | strip_html | truncatewords: 50 | escape }}"
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
